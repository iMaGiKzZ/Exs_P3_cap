//Inverter uma string SEM auxiliar.

int main(){
    char mat[10];
    int i;
    gets(mat);
    for(i=strlen(mat)-1;i>=0;i--){
      printf("%c",mat[i]);
    }
   printf("\n");
return 0;
}
-----------------------------------------------------
//Inverter uma string COM auxiliar.

int main(){
    char mat[10],copia[10];
    int i,j=0;
    gets(mat);
    for(i=strlen(mat)-1;i>=0;i--){
        copia[j]=mat[i];
        j++;
    }
    copia[j]='\n';
    printf("a string inversa eh %s\n",copia);
return 0;
}
