//a partir de duas strigs ve os elementos iguais e gera uma terceira.

#include <stdio.h>
int main()
{
    char A[101],B[101],C[101];
    int tamA,tamB,cont=0,achei=0;

    setbuf(stdin,NULL);
    fgets(A,101,stdin);
    fgets(B,101,stdin);
    tamA= strlen(A);
    tamB= strlen(B);

     for(int i=0;i<101;i++){
        for(int j;j<101;j++){
           if(A[i]!=B[j]){
            for(int k=0;k<cont;k++){
                if(A[i]!=C[k]){
                    achei=1;
                    k=cont;
                }
                if(B[j]!=C[k]){
                    achei=1;
                    k=cont;
                }
            }
            if(achei!=1){
                C[cont]=A[i];
                cont++;
            }
            achei=0;
           }
        }
     }
     C[cont]='\0';
    puts(C);
  return 0;
}
