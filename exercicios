//Maior elemento de uma matriz.

int main()
{
    int mat[N][N], maior=mat[0][0];
    int i,j;
    for(i=0;i<N;i++){
        for(j=0;j<N;j++){
            scanf("%d ",&mat[i][j]);
        }
    }
    for(i=0;i<N;i++){
       for(j=0;j<N;j++){
            if(mat[i][j]>maior){
                maior=mat[i][j];
             }
       }
    }
    printf("O maior valor eh %d\n", maior);

    return 0;
}
